@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.v1</li>

</ol>
<table class="table table-hover">

    <tr>
        <th>Personel İd</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Personelİd</th>
            <td>@item.PersonelAd</td>
            <td>@item.personelSoyad</td>
            <td>@item.personelGorsel</td>
            <td><a href="#" class="btn btn-default" style="background-color:brown; color:white">Satışlar</a></td>
        </tr>
    }
</table>
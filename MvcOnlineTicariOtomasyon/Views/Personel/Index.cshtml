@model List<Personel>

@{
    ViewBag.Title = "Index";
}

<style>
    .personel-img {
        width: 97px;
        height: 80px;
        border-radius: 50%;
        display: block;
        margin: auto;
        object-fit: cover;
    }

    .personel-table td {
        padding: 6px 8px;
        vertical-align: middle;
    }

</style>

<link rel="stylesheet" href="~/Web/Css/style.css" />
<br />
<table class="table table-bordered personel-table">
    <tr class="headerTable">
        <th>İD</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="alterTable">
            <td>@item.Personelİd</td>
            <td>@item.PersonelAd</td>
            <td>@item.personelSoyad</td>
            <td>
                <img src="@item.personelGorsel" class="personel-img" />
            </td>
            <td>@item.Departman.DepartmanAd</td>
            <td>
                <a href="/Personel/PersonelGüncelle/@item.Personelİd" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanSatıslar/@item.Personelİd" class="btn btn-secondary">Detaylar</a>
            </td>
        </tr>
    }
</table>

<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Personel Ekle</a>

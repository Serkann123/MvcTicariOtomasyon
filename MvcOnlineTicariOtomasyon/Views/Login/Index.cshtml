@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mvc5 Online Ticari Otomasyon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
    Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">

    <link rel="stylesheet" href="~/weblogin/css/font-awesome.css">
    <link rel="stylesheet" href="~/weblogin/css/popup-box.css" />
    <link rel="stylesheet" href="~/weblogin/css/style.css">

</head>
<body>
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">Giriş Formu</a>
            </div>
            <div class="social">
                <ul>
                    <li><a href="https://www.facebook.com/" target="_blank"><span class="fa fa-facebook"></span></a></li>
                    <li><a href="https://x.com/" target="_blank"><span class="fa fa-twitter"></span></a></li>
                    <li><a href="https://www.linkedin.com/" target="_blank"><span class="fa fa-linkedin"></span></a></li>
                    <li><a href="https://www.instagram.com/" target="_blank"><span class="fa fa-instagram"></span></a></li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <h1>Asp.Net Mvc5 <span class="transform-none">ile</span></h1> 
                    <h2>Dinamik Web Projesi Geliştirme</h2>
                    <p>
                        Admin, personel kişisel sayfası ve cari kişisel sayfası olmak üzere üç temel
                        yapımız bulunmaktadır.Giriş yapmak istediğiniz yetki durumuna göre, sağ taraftan
                        ilgili menüyü seçiniz.
                    </p>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated transform-none " data-wow-delay=".5s" href="#small-dialog2">Kayıt Ol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated transform-none" data-wow-delay=".5s" href="#small-dialog">Cari Girişi »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated transform-none" data-wow-delay=".5s" href="#small-dialog1">Personel Girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <p class="agile-copyright">© @DateTime.Now.Year Projesi. Serkan Altunay | Tüm Hakları Saklıdır</p>
    </section>
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Cari Giriş Formu</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("CariForm1", "Login", FormMethod.Post))
                        {

                            <input type="text" class="mail" name="CariMail" Placeholder="Mail Adresiniz" required="" />
                            <input type="password" class="password" name="CariSifre" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş Yap">
                        }

                    </div>
                    <div class="login-agileits-bottom">
                        <h6><a href="#">Şifremi Unuttum ?</a></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Formu Girişi</h3>
                    <div class="clear"></div>
                    <div class="login-agileits-top">

                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="name" name="KullanıcıAd" Placeholder="Kullanıcı Adı" required="" />
                            <input type="password" class="password" name="Sifre" Placeholder="Şifreniz" required="" />
                            <input type="submit" value="Giriş Yap">
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

            @Html.Action("partial1", "Login")

        </div>
    </div>
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
</body>
</html>
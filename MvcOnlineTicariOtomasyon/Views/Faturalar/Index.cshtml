@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Faturalar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <th>@item.Faturaİd</th>
        <td>@item.FaturaSeriNo @item.FaturaSıraNo</td>
        <td>@item.FaturaTarih</td>
        <td>@item.Saat</td>
        <td>@item.Toplam ₺</td>
        <td><a href="/Faturalar/FaturaGetir/@item.Faturaİd" class="btn btn-warning">Güncelle</a></td>
        <td><a href="/Faturalar/FaturaDetay/@item.Faturaİd" class="btn btn-default" style="background-color:lightcoral">Detaylar</a></td>
        <td><a href="/Faturalar/FaturaDetay/@item.Faturaİd" class="btn btn-default" style="background-color:thistle">Kalem</a></td>
    </tr>
    }

</table>

<a href="/Faturalar/FaturaEkle/" class="btn btn-primary">Yeni Fatura Girişi</a>
<br />
<br />
<button class="btn btn-default" style="background-color:cornflowerblue; color:white" data-toggle="modal" data-target="#modal1">Popup Penceresi</button>

<div class="modal" id="modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.FaturaSeriNo</td>
                            <td>@item.FaturaSıraNo</td>
                            <td>@item.Toplam</td>
                        </tr>
                    }
                </table>
                <button class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>
@model List<SatisHareket>

@{
    ViewBag.Title = "MusteriSatis";
}

<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari Adı: @ViewBag.Cari</li>

</ol>
<table class="table table-condensed">

    <tr>
        <th>Satış İd</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Satısİd</th>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Personel.PersonelAd @item.Personel.personelSoyad</td>
            <td>@item.Fiyat</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:dodgerblue; color:white">Yazdır</a></td>
        </tr>
    }
</table>


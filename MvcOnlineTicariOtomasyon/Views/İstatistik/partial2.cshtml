@model IPagedList<Cariler>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cariler Hover Tablosu</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Şehir</th>
                            <th>Mail</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Cariİd</td>
                                <td>@item.CariAdı</td>
                                <td>@item.CariSoyad</td>
                                <td>@item.CariSehir</td>
                                <td>@item.CariMail</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, sayfa => Url.Action("partial2", "İstatistik", new { sayfa }), new PagedListRenderOptions
                           {
                                 LiElementClasses = new List<string>
                                 { "page-link"}
                            })
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(document).on("click", "#partial2Container .pagination a", function (e) {
            e.preventDefault();
            var url = $(this).attr("href");
            $.ajax({
                url: url,
                type: "GET",
                success: function (data) {
                    $("#partial2Container").html(data);
                },
                error: function () {
                    alert("Hata oluştu.");
                }
            });
        });
    });
</script>

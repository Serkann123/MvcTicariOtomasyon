@model MvcOnlineTicariOtomasyon.Models.Sınıflar.FaturaKalem

@{
    ViewBag.Title = "FaturaKalem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Kalem Girişi</h2>
<br />
<form class="form-group" method="post">


    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.Acıklama, new { @class = "form-control" })
    <br />

    @Html.Label("Miktar")
    @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
    <br />

    @Html.Label("Birim Fiyat")
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
    <br />

    @Html.Label("Tutar")
    @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
    <br />

    @Html.Label("Fatura İd")
    @Html.TextBoxFor(x => x.Faturaİd, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>

</form>


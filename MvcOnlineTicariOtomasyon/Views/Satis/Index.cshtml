@model List<SatisHareket>

@{
    ViewBag.Title = "Index";
}


<link rel="stylesheet" href="~/Web/Css/style.css" />

<br />

<table id="tbl1" class="table table-bordered">

    <thead>
        <tr class="headerTable">
            <th>İD</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>

        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr class="alterTable">

            <td>@item.Satısİd</td>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cariler.CariAdı @item.Cariler.CariSoyad</td>
            <td>@item.Personel.PersonelAd @item.Personel.personelSoyad</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td><h1>
            <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
            <td><a href="/Satis/SatisGetir/@item.Satısİd" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@item.Satısİd" class="btn btn-default" style="background-color:lightcoral">Detaylar</a></td>
        </tr>
    }

</table>

<a href="/Satis/SatisEkle/" class="btn btn-info">Yeni Satış Yap</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>

    $('#tbl1').dataTable({});

</script>
@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Class3

@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(function () {

        $('#DrpKategoriler').change(function () {

            var id = $('#DrpKategoriler').val();

            $.ajax({

                url: '/Kategori/UrunGetir',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpUrunler').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpUrunler').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>

<br />
<div>
    <h2>Kategoriler-Ürünler</h2>
</div>
<br />
<div>
    @Html.Label("Kategoriler")
    @Html.DropDownList("DrpKategoriler", Model.Kategoriler, "---Kategori Seçiniz---", new { @class = "form-control" })
    <br />

    @Html.Label("Ürünler")
    @Html.DropDownList("DrpUrunler", Model.Urunler, "---Ürün Seçiniz---", new { @class = "form-control" })
</div>

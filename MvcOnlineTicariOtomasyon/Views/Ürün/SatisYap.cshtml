@model MvcOnlineTicariOtomasyon.Models.Sınıflar.SatisHareket

@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Satış Yap</h2>

<br />

<form class="form-group" method="post">

    @Html.Label("ÜrünId")
    <input type="text" name="Urunİd" value="@ViewBag.deger1" class="form-control" readonly />
    <br />

    @Html.Label("PersonelID")
    @Html.DropDownListFor(x => x.Personelİd, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />

    @Html.Label("CariId")
    @Html.TextBoxFor(x => x.Cariİd, new { @class = "form-control" })
    <br />

    @Html.Label("Adet")
    <input type="number" name="Adet" class="form-control" min="0" value="1" onchange="Sum()" id="txt1" />
    <br />

    @Html.Label("Fiyat")
    <input type="text" value="@ViewBag.deger2" name="Fiyat" class="form-control" onkeyup="Sum()" id="txt2" />
    <br />

    @Html.Label("Toplam Tutar")
    <input type="text" value="0" name="ToplamTutar" class="form-control" id="txt3" readonly />
    <br />

    <button class="btn btn-warning">Satış Yap</button>
</form>

<script>
    function Sum() {
        var sayi1 = document.getElementById("txt1").value;
        var sayi2 = document.getElementById("txt2").value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById("txt3").value = sonuc;
        }
    }
</script>
